@model InterviewEvaluationSystem.Models.tblRatingScale

@{
    ViewBag.Title = "RatingScale";
   // Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/HRLayout.cshtml";
}

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div ID="form1" class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Rate Scale", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RateScale, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RateScale, "", new { @class = "text-danger" })
                
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Rate Value", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RateValue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RateValue, "", new { @class = "text-danger" })

            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
               
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Scale" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="container" id="ajaxgrid">
    @{
        var gridview = new WebGrid(ViewBag.Roles, canSort: true, ajaxUpdateContainerId: "ajaxgrid", rowsPerPage: 10);
    }

    @gridview.GetHtml(
                                tableStyle: "webgrid-table",
                                headerStyle: "webgrid-header",
                                footerStyle: "webgrid-footer",
                                selectedRowStyle: "webgrid-selected-row",
                                rowStyle: "webgrid-row-style",
                                mode: WebGridPagerModes.All,
                                columns: new[]

                        {

    gridview.Column("Rate Scale",
        format:
        @<text>
            <span id="ratescale" class="read">@item.RateScale</span>
            @Html.TextBox("RateScale", (string)item.RateScale, new { @class = "edit cat",@style="display:none"  })
            <label class="text-danger" id="scaleLbl"></label>
        </text>),

    gridview.Column("Rate Value",
        format:
        @<text>
            <span id="ratevalue" class="read">@item.RateValue</span>
            @Html.TextBox("RateValue",(int)item.RateValue, new { @class = "edit cat",@style="display:none"  })
            <label class="text-danger" id="valueLbl"></label>
        </text>),

    gridview.Column("Description",
         format:
        @<text>
            <span id="description" class="read">@item.Description</span>
            @Html.TextBox("Description", (string)item.Description, new { @class = "edit",@style="display:none"  })
            <label class="text-danger" id="desLbl"></label>
        </text>),

    gridview.Column("Action", style: "button",
                format:
                @<text>
                    
                    <button class="edit-case read" id="@item.RateScaleID">Edit</button>
                    <span class="glyphicon glyphicon-edit"></span>
                    <button class="delete-case read" id="@item.RateScaleID">Delete</button>
                    <button class="update-case edit" style="display:none" id="@item.RateScaleID">Update</button>
                    <button class="cancel-case edit" style="display:none" id="@item.RateScaleID">Cancel</button>
                </text>)
                            }
                        )
</div>

<br/>
<br/>
@Html.ActionLink("Back to dashboard ", "HRHomePage", "HR", new { @class = "elements" }, null)

