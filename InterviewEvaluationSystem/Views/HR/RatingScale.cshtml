    #form1{
           font-family:  "Times New Roman", Arial, Helvetica, sans-serif;
           font-size: 1.2em;
            color: dodgerblue !important;
    }
    .webgrid-table {
        font-family:  "Times New Roman", Arial, Helvetica, sans-serif;
        font-size: 1.2em;
        width: 100%;
        display: table;
        border-collapse: separate;
        border: solid 1px dodgerblue;
        background-color: white;
    }

        .webgrid-table td, th {
            border: 1px solid dodgerblue;
            padding: 3px 7px 2px;
        }

    .webgrid-header {
        background-color: black;
        color: black !important;
        padding-bottom: 4px;
        padding-top: 5px;
        text-align: left;
    }

    .webgrid-footer {
    }

    .webgrid-row-style {
        padding: 3px 7px 2px;
    }
</style>

