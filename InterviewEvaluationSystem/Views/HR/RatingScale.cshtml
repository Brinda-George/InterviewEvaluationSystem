@model InterviewEvaluationSystem.Models.RateScaleViewModel

@{
    ViewBag.Title = "RatingScale";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/HR/HRHomePage">Home Page</a>
    </li>
    <li class="breadcrumb-item active">Rating Scale</li>
</ol>

<h2>RatingScale</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div ID="form1" class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RateScale, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RateScale, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RateScale, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RateValue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RateValue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RateValue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div id="ajaxgrid">
    @{
        var gridview = new WebGrid(ViewBag.Roles, canSort: true, ajaxUpdateContainerId: "ajaxgrid", rowsPerPage: 5);
    }

    @gridview.GetHtml(tableStyle: "table table-bordered table-striped table-condensed",
                 headerStyle: "webgrid-header",
                 footerStyle: "webgrid-footer",
                 alternatingRowStyle: "webgrid-alternating-row",
                 selectedRowStyle: "webgrid-selected-row",
                 rowStyle: "webgrid-row-style",
                 mode: WebGridPagerModes.All,
                 columns: new[]
                 {

    gridview.Column("RateScale",
        format:
        @<text>
            <span id="ratescale" class="read">@item.RateScale</span>
            @Html.TextBox("RateScale", (string)item.RateScale, new { @class = "edit",@style="display:none"  })
        </text>),

    gridview.Column("Value",
        format:
        @<text>
            <span id="ratevalue" class="read">@item.RateValue</span>
            @Html.TextBox("RateValue",(int)item.RateValue, new { @class = "edit",@style="display:none"  })
        </text>),

    gridview.Column("Description",
         format:
        @<text>
            <span id="description" class="read">@item.Description</span>
            @Html.TextBox("Description", (string)item.Description, new { @class = "edit",@style="display:none"  })
        </text>),

    gridview.Column("Action", style: "button",
                format:
                @<text>
                    <button class="edit-case read" id="@item.RateScaleID">Edit</button>
                    <button class="delete-case read" id="@item.RateScaleID">Delete</button>
                    <button class="update-case edit" style="display:none" id="@item.RateScaleID">Update</button>
                    <button class="cancel-case edit" style="display:none" id="@item.RateScaleID">Cancel</button>
                </text>)
                            }
                        )
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/Rscale.js"></script>