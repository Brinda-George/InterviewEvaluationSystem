@model InterviewEvaluationSystem.Models.tblRound

@{
    ViewBag.Title = "RatingScale";
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddRound</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div ID="form1" class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.RoundName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RoundName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RoundName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div id="ajaxgrid">
        @{
            var gridview = new WebGrid(ViewBag.Rounds, canSort: true, ajaxUpdateContainerId: "ajaxgrid", rowsPerPage: 5);
        }

        @gridview.GetHtml(
                                tableStyle: "webgrid-table",
                                headerStyle: "webgrid-header",
                                footerStyle: "webgrid-footer",
                                selectedRowStyle: "webgrid-selected-row",
                                rowStyle: "webgrid-row-style",
                                mode: WebGridPagerModes.All,
                                columns: new[]

                        {

    gridview.Column("RoundName",
        format:
        @<text>
            <span id="roundname" class="read">@item.RoundName</span>
            @Html.TextBox("RoundName", (string)item.RoundName, new { @class = "edit",@style="display:none"  })
        </text>),

    gridview.Column("Action", style: "button",
                format:
                @<text>
                    <button class="edit-case read" id="@item.RoundID">Edit</button>
                    <button class="delete-case read" id="@item.RoundID">Delete</button>
                    <button class="update-case edit" style="display:none" id="@item.RoundID">Update</button>
                    <button class="cancel-case edit" style="display:none" id="@item.RoundID">Cancel</button>
                </text>)
                            }
                        )
    </div>

    <br />
    <br />
    @Html.ActionLink("Go back to home ?", "HRHomePage", "HR", new { @class = "elements" }, null)

    <style type="text/css">
        #form1 {
            font-family: "Times New Roman", Arial, Helvetica, sans-serif;
            font-size: 1.2em;
            color: dodgerblue !important;
        }

        .webgrid-table {
            font-family: "Times New Roman", Arial, Helvetica, sans-serif;
            font-size: 1.2em;
            width: 100%;
            display: table;
            border-collapse: separate;
            border: solid 1px dodgerblue;
            background-color: white;
        }

            .webgrid-table td, th {
                border: 1px solid dodgerblue;
                padding: 3px 7px 2px;
            }

        .webgrid-header {
            background-color: black;
            color: black !important;
            padding-bottom: 4px;
            padding-top: 5px;
            text-align: left;
        }

        .webgrid-footer {
        }

        .webgrid-row-style {
            padding: 3px 7px 2px;
        }
    </style>

</body>
</html>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/Around.js"></script>