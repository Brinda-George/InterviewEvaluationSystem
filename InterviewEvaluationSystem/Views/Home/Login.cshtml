
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = null;
    // Layout = "~/Views/Shared/HRLayout.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

        <h1  class="title">Suyati Technologies</h1>
        <hr />

<div id="loginForm">
    <table>
        <tr>
            <td>
                <h2 @*style="color:darkblue;"*@>Login</h2>
                <form class="form-signin" method="post" action="">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                        <input id="in" type="text" class="form-control" name="Username" placeholder="User Name" required="" autofocus="" />
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                        <input id="in" type="password" class="form-control" name="Password" placeholder="Password" required="" />
                    </div>
                    <br />
                    <div class="text-danger">@ViewBag.Message</div>
                    <button @*style="height:50px;text-align:center;background-color:darkblue;"*@ class="btn btn-primary btn-lg btn-block login-button" type="submit">Login</button>
                </form>
            </td>
        </tr>
    </table>
</div>

<style type="text/css">
    #loginForm {
        position:static;
        height:50%;
        width: 32%;
        margin: 200px auto;
        margin-top:50px;
        text-align: center;
        background: rgba(0, 0, 0, 0.43);
        box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
        padding-left: 2%;
        padding-top:3%;
        padding-bottom:7%;
    } 

    h1{
        text-align:center;
    }

    #in{
        width:280px;
    }
</style>
<link href="~/Content/LoginTemplate.css" rel="stylesheet" />
